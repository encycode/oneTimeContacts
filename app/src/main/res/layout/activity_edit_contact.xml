<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".AddContact">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:padding="20dp">

                <TextView
                    android:id="@+id/callBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/call"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/msgBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/message"
                    android:drawableTint="@color/white"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/mailBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/email"
                    android:drawableTint="@color/white"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/wtspBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/whatsapp"
                    android:background="@color/transparent"/>



            </LinearLayout>

            <EditText
                android:id="@+id/firstNameET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:hint="First Name *"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/lastNameET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:hint="Last Name"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/mobileNumberET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:hint="Mobile Number *"
                android:textColor="@color/white"
                android:inputType="number"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/emailIdET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:hint="Email ID"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/companyET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/company"
                android:drawablePadding="10dp"
                android:hint="Company"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/jobET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/job_title"
                android:drawablePadding="10dp"
                android:hint="Job Title"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="Save"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/discardBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="discard"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>