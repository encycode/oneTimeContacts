<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".AddContact">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/callBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/editcall"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/msgBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/message"
                    android:drawableTint="@color/white"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/mailBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/editemail"
                    android:drawableTint="@color/white"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/wtspBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/whatsapp"
                    android:background="@color/transparent"/>

            </LinearLayout>

            <View style="@style/Divider.Horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_fname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/fname"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/person"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/lname"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/person"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_mobile"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/mob"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/call"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobileNumberET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/email"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/email"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailIdET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/company"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/company"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/jtitle"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/BorderTint"
                    app:hintTextColor="@color/BorderTint"
                    app:startIconDrawable="@drawable/job_title"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/jobET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>