<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DialerActivity">

    <TextView
        android:id="@+id/addToContactTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Add to One Time Contact"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        
        <TableRow
            android:weightSum="3">
            <TextView
                android:id="@+id/numberfield"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:layout_weight="2.8"
                android:textSize="30sp"
                android:inputType="number"
                android:background="@color/lightGrey"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/backspaceBtn"
                android:layout_weight="0.2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:src="@drawable/backspace"/>

        </TableRow>

        <TableRow
            android:weightSum="3" >

            <Button
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="2"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />
            
        </TableRow>

        <TableRow
            android:weightSum="3" >

            <Button
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="4"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="6"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

        </TableRow>

        <TableRow
            android:weightSum="3" >

            <Button
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="7"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="9"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

        </TableRow>

        <TableRow
            android:weightSum="3" >

            <Button
                android:id="@+id/btnStar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="*"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnHash"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:text="#"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="20dp" />

        </TableRow>

        <TableRow android:weightSum="3">

            <ImageButton
                android:id="@+id/dialWtspBtn"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:src="@drawable/whatsapp"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/dialCallBtn"
                android:layout_weight="1"
                android:background="@color/lightgreen"
                android:src="@drawable/call"
                android:padding="20dp" />

            <ImageButton
                android:id="@+id/dialMsgBtn"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:src="@drawable/message"
                android:padding="20dp"
                android:tint="@color/white"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>